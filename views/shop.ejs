<%- include('./includes/header.ejs', {pageTitle: 'Shop'})  %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('./includes/nav.ejs', {activeShop: true})  %>

    <main>
        <% if (prods.length > 0) { %>
        <div class="grid">
            <% prods.forEach(prods => { %>
                            <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product-item__title"> <%= prods.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="https://placehold.co/600x400/png" alt="A Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product-item__price">$19.99</h2>
                        <p class="product-item__description">This is a first product - amazing!</p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">Add to Cart</button>
                    </div>
                </article>
            <% }) %>
        </div>
            
        <% } else { %>
            <h1>No Products Found!</h1>

        <% } %>
    </main>
    <%- include('./includes/footer.ejs')  %>