<%- include('../includes/header.ejs')  %>
</head>
<body>
    <%- include('../includes/navigation.ejs', {activeShop: true})  %>
    <main>
            <ul class="cart__item-list">
                <% products.forEach(p => { %>
                    <li class="cart__item">
                        <div>
                            <h2><%= p.productId.title %></h2>
                            <p>Quantity: <%= p.quantity %></p>
                            <p>Price: $<%= p.productId.price %></p>
                        </div>
                    </li>
                <% }) %>
            </ul>
            <div>
                <h2>Total Price: <%= totalSum %></h2>
            </div>
            <div class="centerd">
                <button id="order-btn" class="btn">ORDER</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('pk_test_51SKqRpKgpFJWEQCCNiuGeoqCDA9xnDhgxFtRWZCPDlM4B26Bl8WNg3WGydKcNulR9UfTtfRjrEVIKMPHfIeatDXj00fYayZ2J7');
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', function(){
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        });
                    });
                </script>
            </div>
    </main>
    <% include('../includes/footer.ejs') %>