   <main>
        {{#if hasProducts }}
        <div class="grid">
            {{#each prods }}
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product-item__title">{{this.title}}</h1>
                    </header>
                    <div class="card__image">
                        <img src="https://placehold.co/600x400/png" alt="A Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product-item__price">$19.99</h2>
                        <p class="product-item__description">This is a first product - amazing!</p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">Add to Cart</button>
                    </div>
                </article>
                {{/each}}
        </div>
        {{ else }}
            <h1>No Products Found!</h1>
        {{/if}}
    </main>
