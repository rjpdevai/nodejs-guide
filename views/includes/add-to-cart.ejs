 <% if (isAuthenticated) { %>
    <form action="/cart" method="POST" style="display:inline;">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="productId" value="<%= product._id %>">
        <button class="btn" type="submit">Add to Cart</button>
    </form>
 <% } %>
